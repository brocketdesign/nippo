extends new_dashboard
block content
    #nippo.container.col-md-10.ml-sm-auto.col-lg-10.pt-3.pl-2.pr-3
        h3.d-block.title #{title}
        .card.border-secondary.mb-3(style="width:100%")
            .card-header.py-1
            .card-body.px-0.py-0
                if nippo
                    each data in nippo
                        -n = 1
                        while  n <= 10
                            if data['工事名-'+n]
                                .px-3.bg-secondary.text-white.updateDate #{data.日付}
                                ul.px-2.py-3.mb-0(style="overflow-x: scroll;max-width: 100%;list-style:none;display: -webkit-inline-box;")
                                    li.mr-3.d-inline-blick(style="max-width: auto;overflow-x: scroll;")
                                        span.d-inline-block(style="width:auto") #{data['工事名-'+n]}
                                    li.mr-3(style="max-width: auto;overflow-x: scroll;")
                                        span.d-inline-block(style="width:auto") #{data['作業名-'+n]}
                                    li.mr-3(style="max-width:auto;overflow-x: scroll;")
                                        span.d-inline-block(style="width:auto") #{data['場所-'+n]}
                                    li.mr-3(style="max-width:auto;overflow-x: scroll;")
                                        span.d-inline-block(style="width:auto") #{data['時間-'+n]}h
                                    li(style="max-width: auto;overflow-x: scroll;")
                                        span.d-inline-block(style="width:auto") #{data['作業内容-'+n]}
                            - n++