extends new_dashboard
block content
    #new_dashoboard_setting_holidays.container.col-md-12.ml-sm-auto.col-lg-12.pt-3.pl-2.pr-3
        h3.d-block.title #{title}
        .row 
            .col-sm-12.col-lg-12.col-md-12
                .card.border-secondary.mb-3(style="width:100%")
                    .card-body.px-0.py-0
                        p.px-2.py-1.mt-2.d-flex(style="justify-content: flex-end;")
                            span.px-2 更新者 : #{lname + " " + fname}
                            //- span.px-2 更新日時 : 2022/02/23 9:23:43
                        .col-12.mt-1
                            form#shimebi(method="POST" data-name="globalsetting" data-value="1")
                                .form-container
                                    .form-row.border.mt-1.col-12.px-0
                                            label.py-2.col-xl-3.col-lg-5.col-12.d-flex.px-4(for="period" style="margin-bottom: 0;color: white;justify-content: flex-start;background: #06d9b4;") 
                                                span.pt-1 法定休日
                                            span.d-flex.my-2#legalHolidayCheck(name="period" style="font-size: 11px;margin-left: 2%;flex-wrap: wrap;align-items: center;")
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="1" value="1")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 月
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="2" value="2")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 火
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="3" value="3")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 水
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="4" value="4")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 木
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="5" value="5")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 金
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="6" value="6")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 土
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="0" value="0")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 日
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="7" value="7")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 祝日
                                    .form-row.border.col-12.px-0
                                            label.py-2.col-xl-3.col-lg-5.col-12.d-flex.px-4(for="period" style="margin-bottom: 0;color: white;justify-content: flex-start;background: #06d9b4;") 
                                                span.pt-1 所定休日
                                            span.d-flex.my-2#scheduledHolidayCheck(name="period" style="font-size: 11px;margin-left: 2%;align-items: center;flex-wrap: wrap;")
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="1" value="1")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 月
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="2" value="2")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 火
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="3" value="3")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 水
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="4" value="4")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 木
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="5" value="5")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 金
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="6" value="6")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 土
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="0" value="0")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 日
                                                div.d-flex.pr-1.pr-xl-4.pr-lg-1.pr-md-4.pr-sm-2
                                                    input(type="checkbox" style="width: 18px;" name="7" value="7")
                                                    label.form-check-label.ml-1(for="chckbox_6131c7e94073b3ec03c9db55" style="font-size: 18px;") 祝日
                                    .form-row.border.col-12.px-0
                                            label.col-xl-3.col-lg-5.col-12.py-2.d-flex.px-4(for="period" style="margin-bottom: 0;color: white;justify-content: flex-start;background: #06d9b4;") 
                                                span.pt-1 オプション
                                            span.d-flex.my-2(name="period" style="font-size: 11px;margin-left: 2%;align-items: center;")
                                                div.d-flex.pr-5
                                                    input(type="checkbox" id="yearEndAndNewYear" style="width: 18px;" name="sub7" value="1")
                                                    label.form-check-label.ml-1(for="1" style="font-size: 18px;") 年末年始休暇(12/29～1/3)を祝日扱いにする
                        hr
                        .col-12.mt-1.d-flex(style="align-items: center;flex-wrap: wrap;gap: 15px;")
                            select.custom-select-1#currentYear(name="month_start" style="padding: 0;")
                                - let yearList = [];
                                - for (let i = 2020; i < new Date().getFullYear() + 5; i++) {
                                    - yearList.push(i);
                                - }
                                each year in yearList
                                    option(value=year selected=(year === new Date().getFullYear())) #{year}年度
                        .col-12.mt-1(id="calendar_for_holiday" style="height:400px;overflow-y:auto;")
                        hr
                        .col-12.my-2.d-flex.d-md-block(style="flex-wrap:wrap;gap: 15px;justify-content:space-between;")
                            button#saveBtn.sendForm.btn.btn-primary.rounded.shadow-sm.s-el.col-5.col-md-2.col-sm-2.mr-md-2
                                span.pt-1 更新
                            button.sendForm.btn.btn-outline-secondary.border.border-secondary.rounded.shadow-sm.s-el.col-5.col-md-2.col-sm-3
                                span.pt-1 閉じる

        #editMonth.modal.fade(tabindex="-1" role="dialog")
            .modal-dialog.modal-dialog-centered(role="document")
                .modal-content
                    .modal-header
                        h5.modal-title 設定編集
                        button.close(data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    .modal-body
                        .row.d-md-flex.d-block(style="justify-content:space-between;")
                            .col-md-7.col-12#modalMonthContent
                            .col-md-5.col-12#modalMonthHolidays
                    .modal-footer
                        button.btn.btn-primary#confirmEditMonthModalBtn 設定
                        button.btn.btn-outline-secondary(data-dismiss="modal") キャンセル
        //- #monthEditingResult.d-none